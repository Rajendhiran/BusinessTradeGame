<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


<item android:state_pressed="true"><color android:color="#800517" />
<shape>
    <gradient android:angle="270" android:endColor="#FFFFFF" android:startColor="#FFFFFF" />
    <stroke android:width="0.1dp" android:color="#999999" />
    <corners android:radius="4dp" />
    <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
  </shape>
</item>
      
<item android:state_focused="true"><color android:color="#00FFFF" />
 <shape>
    <gradient android:angle="270" android:endColor="#FFFFFF" android:startColor="#FFFFFF" />
    <stroke android:width="0.1dp" android:color="#999999" />
    <corners android:radius="4dp" />
    <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
 </shape>
</item>

<item>    
 <shape>
    <gradient android:angle="270" android:centerColor="#3B5E2B" android:endColor="#488214" android:startColor="#3B5E2B" />
    <stroke android:width="0.1dp" android:color="#999999" />
    <corners android:radius="4dp" />
    <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
 </shape>
</item>
</selector>